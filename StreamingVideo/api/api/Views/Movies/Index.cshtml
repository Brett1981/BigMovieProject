@model IEnumerable<api.Movie_Data>
@{ 
    ViewBag.Title = "MovieIndexPage";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Movie_Info.backdrop_path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ext)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.guid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.folder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.views)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="https://image.tmdb.org/t/p/w300/@Html.DisplayFor(modelItem=>item.Movie_Info.poster_path)" alt="poster" width="120" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ext)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.guid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.folder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.views)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { guid = item.guid })
            <br />
            @Html.ActionLink("Details", "Details", new { guid = item.guid })
            <br />
            @Html.ActionLink("Delete", "Delete", new { guid = item.guid })
        </td>
    </tr>
}

</table>
